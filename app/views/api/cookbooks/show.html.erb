Create a Recipe

<% if @cookbook.recipes.nil? %>
<p>	No Recipes In Your Cookbook Just Yet </p>
<% else %>
	<%= @cookbook.recipes.each do |recipe| %>
		<li><%= recipe %></li>
	<% end %>
<% end %>

<%= form_for :recipes, :url => api_recipes_url, :html => {:method => :post} do |f| %>
	<%= f.label :instructions %>
	<%= f.text_field :instructions %>
	<%= f.label :dishname %>
	<%= f.text_field :dishname %>
	<%= f.submit %>
	<%= f.text_area(size:"100x100")%>

<% end %> 

